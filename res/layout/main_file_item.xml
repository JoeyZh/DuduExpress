<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:longClickable="true"
        android:padding="@dimen/layout_mid_margin" >

        <TextView
            android:id="@+id/txt_logo"
            style="@style/text_large_style"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_circle_blue"
            android:gravity="center"
            android:text="录"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/txt_logo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/third_dev_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="通知一"
                android:textColor="@color/text_color_gray68"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/third_dev_yst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:singleLine="false"
                android:text="YST"
                android:textColor="@color/text_color_gray68"
                android:textSize="@dimen/text_mid_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_btn_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_circle_blue"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_btn_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_btn_1"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/bottom_longline_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_height"
        android:background="@color/divider_line"
        android:visibility="visible" />

</LinearLayout>