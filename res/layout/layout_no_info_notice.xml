<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/no_info_notice_layout"
    android:layout_height="wrap_content">

    <TextView
        android:padding="@dimen/layout_mid_margin"
        android:gravity="center"
        android:layout_gravity="center"
        style="@style/text_large_style"
        android:textColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~~/(ㄒoㄒ)/~~"/>

    <TextView
        android:id="@+id/no_info_notice_text"
        android:gravity="center"
        android:layout_gravity="center"
        style="@style/text_mid_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_files"/>

    <Button
        android:id="@+id/no_info_notice_btn"
        style="@style/btn_default_style"
        android:text="@string/add_files"
        android:layout_height="@dimen/default_btn_height"
        android:layout_margin="@dimen/layout_max_margin"
        android:layout_width="match_parent"/>

</LinearLayout>