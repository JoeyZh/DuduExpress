<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_edit_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_mid_margin">

        <TextView
            android:id="@+id/bill_text_total_tag"
            style="@style/text_mid_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_edit_height"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/bill_total_tag"
            android:textColor="@color/text_color_gray8e" />

        <TextView
            android:id="@+id/bill_text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/layout_min_margin" />


    </LinearLayout>

    <include layout="@layout/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_edit_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_mid_margin">

        <TextView
            android:id="@+id/bill_text_balance_tag"
            style="@style/text_mid_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_edit_height"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/bill_balance_tag"
            android:textColor="@color/text_color_gray8e" />

        <TextView
            android:id="@+id/bill_text_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/layout_min_margin" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_divider_height"
        android:background="@color/divider_line" />

    <TextView
        android:id="@+id/bill_text_description"
        style="@dimen/text_mid_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_min_margin"
        android:text="@string/bill_detail" />

    <include layout="@layout/divider_horizontal" />

    <ListView
        android:id="@+id/bill_list"
        style="@style/list_view_style1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>